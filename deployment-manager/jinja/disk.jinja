resources:
- name: templatemanager
  type: compute.v1.instanceGroupManager
  properties:
    baseInstanceName: {{ env["deployment"] }}-ele
    instanceTemplate: $(ref.templatedeloscojones.selfLink)
    targetSize: 1
    zone: europe-west1-b
- name: templatedeloscojones
  type: compute.v1.instanceTemplate
  properties:
    properties:
      disks:
      - deviceName: boot
        type: PERSISTENT
        boot: true
        autoDelete: true
        initializeParams:
          sourceImage: projects/bbva-ialabs-poc/global/images/oso-instance
      - deviceName: loquemesalgade
        type: PERSISTENT
        boot: false
        autoDelete: true
        initializeParams:
          diskSizeGb: 1
          diskType: pd-ssd
      machineType: n1-standard-2
      networkInterfaces:
      - network: https://www.googleapis.com/compute/v1/projects/bbva-ialabs-poc/global/networks/default