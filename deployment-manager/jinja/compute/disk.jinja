{% macro Disks() %}
{% macro diskName(disk) -%}{{ env["name"] }}-disk-{{ disk["name"] }}{%- endmacro %}
resources:
{% for disk in properties["disks"] %}
- name: {{ diskName(disk) }}
  type: compute.v1.disk
  properties:
    zone: {{ properties["zone"] }}
    sizeGb: {{ disk["sizeGb"] }}
    type: https://www.googleapis.com/compute/v1/projects/{{ env["project"] }}/zones/{{ properties["zone"] }}/diskTypes/{{ disk["diskType"] }}
{% endfor %}
{% endmacro %}
