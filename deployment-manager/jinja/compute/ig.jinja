{% set INSTANCE_TEMPLATE = "%s-it-%s" % (env["deployment"], properties['name']) %}
{% set IGM = "%s-igm-%s" % (env["deployment"], properties['name']) %}

{% macro InstanceGroup(api_version='v1', it_extended_content='') %}
{% if property['ig_type'] == 'managed' %}
resources:
- name: {{ IGM }}
  type: compute.{{ api_version }}.instanceGroupManager
  properties:
    baseInstanceName: {{ env["deployment"] }}
    instanceTemplate: $(ref.{{ INSTANCE_TEMPLATE }}.selfLink)
    targetSize: {{ property['size'] }}
    zone: {{ properties["zone"] }}
- name: {{ INSTANCE_TEMPLATE }}
  type: compute.{{ api_version }}.instanceTemplate
  properties:
    properties:
      disks:
      - deviceName: boot
        type: PERSISTENT
        boot: true
        autoDelete: true
        initializeParams:
          sourceImage: https://www.googleapis.com/compute/v1/projects/{{ env["project"] }}/global/images/{{ properties["image"] }}
      machineType: {{ properties["flavor"] }}
      networkInterfaces:
      - network: https://www.googleapis.com/compute/v1/projects/{{ env["project"] }}/global/networks/default
      {{ it_extended_content }}
{% else %}
resources:
- name: {{ IGM }}
  type: compute.v1.instanceGroup
  properties:
    zone: {{ properties["zone"] }}
{# TODO: Create all instances recursively #}
{% endif %}
{% endmacro %}
