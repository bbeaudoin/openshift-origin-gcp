resources:

- name: {{ env["deployment"] }}-net
  type: network.jinja
  properties:
    name: {{ env["deployment"] }}-net

- name: {{ env["deployment"] }}-dns
  type: dns.jinja
  properties:
    name: {{ env["deployment"] }}-dns
    dns_name: {{ properties['dns_name'] }}

- name: {{ env["deployment"] }}-bastion
  type: compute.v1.instance
  properties:
    zone: {{ properties["zone"] }}
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        sourceImage: projects/{{ env["project"] }}/global/images/{{ properties["image"] }}
    metadata:
      items:
      - key: startup-script
        value: |
          #!/bin/bash
          set -e
          echo "Generating Certificate for openshift api ..."
          KEY='/tmp/ssl.key'
          CERT='/tmp/ssl.crt'
          openssl req -x509 -nodes -days 3650 -newkey rsa:2048 -subj "/C=US/L=Raleigh/O={{ properties['dns_name'] }}/CN={{ properties['openshift_api_public_hostname'] }}" -keyout "$KEY" -out "$CERT"
          gcloud --project "{{ env['project'] }}" compute ssl-certificates create "{{ env['deployment'] }}-master-ssl-lb-cert" --private-key "$KEY" --certificate "$CERT"
          rm -rf $KEY $CERT
          gcloud beta runtime-config configs variables set \
            success/var --config-name $(ref.{{ env["deployment"] }}-bastion-waiter.configName)
    machineType: projects/{{ env["project"] }}/zones/{{ properties["zone"] }}/machineTypes/{{ properties["flavor"] }}
    networkInterfaces:
    - network: projects/{{ env["project"] }}/global/networks/{{ env["deployment"] }}-net
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
    serviceAccounts:
    - scopes:
      - https://www.googleapis.com/auth/cloud-platform
      - https://www.googleapis.com/auth/cloudruntimeconfig
  metadata:
    dependsOn:
    - {{ env["deployment"] }}-net

- name: {{ env["deployment"] }}-bastion-waiter
  type: waiter.jinja
  properties:
    instanceName: {{ env["deployment"] }}-bastion

{% for instance_group in properties['instance_groups'] %}
- name: {{ env["deployment"] }}-{{ instance_group['name'] }}
  type: ig.jinja
  properties:
    ig_type: {{ properties['instance_groups_type'] }}
    name: {{ instance_group['name'] }}
    type: {{ instance_group['type'] }}
    size: {{ instance_group['size'] }}
    tags: {{ instance_group['tags'] | default([]) }}
    image: {{ instance_group['image'] | default(properties['image']) }}
    zone: {{ instance_group['zone'] | default(properties['zone']) }}
    flavor: {{ instance_group['flavor'] | default(properties['flavor']) }}
    disks: {{ instance_group['disks'] | default(properties['default_disks']) }}
    scopes: {{ instance_group['scopes'] | default(properties['scopes']) }}
    gpu: {{ instance_group['gpu'] | default([]) }}
{% endfor %}

- name: {{ env["deployment"] }}-lb-ext
  type: lb-master-ext.jinja
  properties:
    zone: {{ properties['zone'] }}
    region: {{ properties['region'] }}

- name: {{ env["deployment"] }}-fw
  type: firewall.jinja
  properties:
    network: {{ env["deployment"] }}-net
    firewall_extra_ports: {{ properties['firewall_extra_ports'] }}

- name: {{ env["deployment"] }}-registry
  type: registry.jinja
  properties:
    name: {{ properties["registry"]["name"] }}
    region: {{ properties["region"] }}